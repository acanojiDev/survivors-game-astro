    <div class="legend">
      <div class="item"><span class="icon shield"></span> Escudo</div>
      <div class="item"><span class="icon speed"></span> Dash</div>
      <div class="item"><span class="icon boss"></span> Alfa</div>
      <div class="item"><span class="icon thunder"></span> Rayo</div>
    </div>
  </div>
</div>

<script>
  import { GameWorld } from "../game/GameWorld";

  const canvas = document.getElementById("gameCanvas") as HTMLCanvasElement;
  const ctx = canvas.getContext("2d")!;
  const restartBtn = document.getElementById("restartBtn") as HTMLButtonElement;
  const scoreVal = document.getElementById("scoreVal")!;
  const statusOverlay = document.getElementById("statusOverlay")!;
  const statusTitle = document.getElementById("statusTitle")!;
  const statusStats = document.getElementById("statusStats")!;
  const upgradeOverlay = document.getElementById("upgradeOverlay")!;
  const upgradeOptions = document.getElementById("upgradeOptions")!;
  const classOverlay = document.getElementById('classOverlay')!;

  let world = new GameWorld(
    canvas.width,
    canvas.height,
    (score) => { scoreVal.innerText = score.toString(); },
    (state) => {
      if (state === 'playing') {
        statusOverlay.classList.add('hidden');
      } else {
        statusOverlay.classList.remove('hidden');
        statusTitle.innerText = state === 'survivorsWin' ? 'üåå DIOS DEL CAOS' : 'üíÄ ANIQUILADOS';
        statusTitle.style.color = state === 'survivorsWin' ? '#34d399' : '#f87171';
        statusStats.innerText = state === 'survivorsWin' ? 'Has recolectado 100 estrellas bajo la niebla.' : 'El Alfa ha terminado la cacer√≠a perfecta.';
      }
    }
  );

  const btnTank = document.getElementById('btnTank')!;
  const btnSpeedster = document.getElementById('btnSpeedster')!;
  const btnMage = document.getElementById('btnMage')!;

  btnTank.onclick = () => { world.applyHeroClass('tank'); classOverlay.classList.add('hidden'); };
  btnSpeedster.onclick = () => { world.applyHeroClass('speedster'); classOverlay.classList.add('hidden'); };
  btnMage.onclick = () => { world.applyHeroClass('mage'); classOverlay.classList.add('hidden'); };

  function resize() {
    canvas.width = canvas.parentElement!.clientWidth;
    canvas.height = canvas.parentElement!.clientHeight;
    world.resize(canvas.width, canvas.height);
  }

  window.addEventListener("resize", resize);
  resize(); // Initial call

  function showUpgradeUI() {
    if (!world.isUpgradePending) return;

    upgradeOptions.innerHTML = '';
    world.availableUpgrades.forEach(upgrade => {
      const card = document.createElement('div');
      card.className = 'upgrade-card';
      card.innerHTML = `
        <div class="upgrade-icon">${upgrade.icon}</div>
        <div class="upgrade-name">${upgrade.name}</div>
        <div class="upgrade-desc">${upgrade.desc}</div>
      `;
      card.onclick = () => {
        world.applyUpgrade(upgrade.id);
        upgradeOverlay.classList.add('hidden');
      };
      upgradeOptions.appendChild(card);
    });

    upgradeOverlay.classList.remove('hidden');
  }

  function loop() {
    if (world.isUpgradePending && upgradeOverlay.classList.contains('hidden')) {
      showUpgradeUI();
    }

    if (!document.hidden && !world.isUpgradePending) {
      world.update();
    }
    world.draw(ctx);
    requestAnimationFrame(loop);
  }

  restartBtn.addEventListener("click", () => {
    world.init();
    statusOverlay.classList.add('hidden');
    classOverlay.classList.remove('hidden');
  });

  loop();
</script>

<style>
  :root {
    --glass: rgba(255, 255, 255, 0.05);
    --glass-border: rgba(255, 255, 255, 0.1);
    --accent: #3b82f6;
  }

  .game-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    padding: 2.5rem;
    background: radial-gradient(circle at top, #1e293b, #0f172a);
    border-radius: 2rem;
    box-shadow: 0 0 80px rgba(0,0,0,0.5);
    color: white;
    font-family: 'Outfit', 'Inter', sans-serif;
    width: 95vw;
    margin: 0 auto;
  }

  .header {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }

  .title-section h1 {
    font-size: 2.5rem;
    font-weight: 900;
    margin: 0;
    letter-spacing: -1px;
    background: linear-gradient(to right, #60a5fa, #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .pro-badge {
    font-size: 0.8rem;
    padding: 0.2rem 0.6rem;
    background: #ef4444;
    -webkit-text-fill-color: white;
    border-radius: 4px;
    vertical-align: middle;
    margin-left: 0.5rem;
  }

  .title-section p {
    color: #64748b;
    margin: 0.5rem 0 0 0;
  }

  .score-card {
    background: var(--glass);
    border: 1px solid var(--glass-border);
    backdrop-filter: blur(10px);
    padding: 1rem 2rem;
    border-radius: 1rem;
    text-align: right;
  }

  .score-card .label {
    font-size: 0.7rem;
    color: #94a3b8;
    letter-spacing: 1px;
    margin-bottom: 0.2rem;
  }

  .score-card .value {
    font-size: 2rem;
    font-weight: 800;
    color: #facc15;
  }

  .score-card .total {
    font-size: 1rem;
    color: #475569;
  }

  .canvas-wrapper {
    position: relative;
    width: 100%;
    height: 75vh;
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow: 0 0 40px rgba(59, 130, 246, 0.2);
    border: 1px solid var(--glass-border);
  }

  canvas {
    background: #020617;
    display: block;
    width: 100%;
    height: 100%;
  }

  .overlay {
    position: absolute;
    inset: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(2, 6, 23, 0.7);
    backdrop-filter: blur(12px);
    transition: opacity 0.3s;
  }

  .upgrade-container {
    text-align: center;
    max-width: 900px;
    width: 95%;
    padding: 2rem;
  }

  .upgrade-title {
    font-size: 2.5rem;
    font-weight: 900;
    margin-bottom: 3rem;
    color: #fca311;
    text-shadow: 0 0 30px rgba(252, 163, 17, 0.4);
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .upgrade-options {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .upgrade-card {
    background: linear-gradient(135deg, rgba(30, 41, 59, 0.7), rgba(15, 23, 42, 0.8));
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 2.5rem;
    padding: 3rem 2rem;
    cursor: pointer;
    transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
  }

  .upgrade-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.05), transparent);
    transform: translateX(-100%);
    transition: transform 0.6s;
  }

  .upgrade-card:hover::before {
    transform: translateX(100%);
  }

  .upgrade-card:hover {
    transform: translateY(-20px) scale(1.02);
    border-color: #3b82f6;
    box-shadow:
      0 30px 60px rgba(0, 0, 0, 0.5),
      0 0 30px rgba(59, 130, 246, 0.4),
      inset 0 0 20px rgba(59, 130, 246, 0.1);
    background: linear-gradient(135deg, rgba(30, 41, 59, 0.8), rgba(59, 130, 246, 0.1));
  }

  .upgrade-card:active {
    transform: translateY(-10px) scale(0.98);
  }

  .upgrade-icon {
    font-size: 5rem;
    filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.3));
    margin-bottom: 1rem;
    transition: transform 0.5s ease;
  }

  .upgrade-card:hover .upgrade-icon {
    transform: scale(1.2) rotate(5deg);
  }

  .upgrade-name {
    font-size: 1.75rem;
    font-weight: 900;
    color: white;
    letter-spacing: 1px;
    text-shadow: 0 2px 10px rgba(0,0,0,0.5);
  }

  .upgrade-desc {
    font-size: 1.1rem;
    color: #cbd5e1;
    line-height: 1.6;
    font-weight: 500;
  }

  .message-box {
    text-align: center;
    transform: scale(1.1);
  }

  .message-box h1 {
    font-size: 4rem;
    font-weight: 900;
    margin: 0;
  }

  .message-box p {
    color: #94a3b8;
    margin: 1rem 0 2rem 0;
  }

  .hidden {
    opacity: 0;
    pointer-events: none;
    visibility: hidden;
  }

  .ui-footer .legend {
    display: flex;
    gap: 2rem;
    background: var(--glass);
    padding: 1rem 2rem;
    border-radius: 50px;
    border: 1px solid var(--glass-border);
  }

  .legend .item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8rem;
    color: #94a3b8;
  }

  .icon {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .icon.shield { background: #3b82f6; box-shadow: 0 0 10px #3b82f6; }
  .icon.speed { background: #facc15; box-shadow: 0 0 10px #facc15; }
  .icon.boss { background: #fb7185; box-shadow: 0 0 10px #fb7185; }
  .icon.thunder { background: white; box-shadow: 0 0 10px white; }

  button {
    padding: 1rem 3rem;
    background: #3b82f6;
    color: white;
    border: none;
    border-radius: 1rem;
    font-weight: 800;
    font-size: 1.1rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.3);
  }

  button:hover {
    background: #2563eb;
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.4);
  }

  button:active {
    transform: translateY(0);
  }
</style>
