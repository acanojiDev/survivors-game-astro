<div class="game-container">
  <div class="header">
    <div class="title-section">
      <h1>SURVIVORS <span class="pro-badge">ULTIMATE PRO</span></h1>
      <p>Esquiva proyectiles, recolecta orbes y sobrevive al Berserker.</p>
    </div>
    <div class="score-card shadow-lg">
      <div class="label">OBJETIVOS</div>
      <div class="value"><span id="scoreVal">0</span> <span class="total">/ 100</span></div>
    </div>
  </div>

  <div class="canvas-wrapper">
    <canvas id="gameCanvas" width="800" height="500"></canvas>
    <div id="statusOverlay" class="overlay hidden">
      <div class="message-box">
        <h1 id="statusMsg">Â¡Sobrevivieron!</h1>
        <p id="subMsg">Has dominado el modo CHAOS.</p>
        <button id="resetBtn">REINTENTAR</button>
      </div>
    </div>
  </div>

  <div class="ui-footer">
    <div class="legend">
      <div class="item"><span class="icon shield"></span> Escudo</div>
      <div class="item"><span class="icon speed"></span> Dash</div>
      <div class="item"><span class="icon boss"></span> Alfa</div>
      <div class="item"><span class="icon fog"></span> Niebla</div>
    </div>
  </div>
</div>

<script>
  import { GameWorld } from "../game/GameWorld";

  const canvas = document.getElementById("gameCanvas") as HTMLCanvasElement;
  const ctx = canvas.getContext("2d")!;
  const resetBtn = document.getElementById("resetBtn") as HTMLButtonElement;
  const scoreVal = document.getElementById("scoreVal")!;
  const statusOverlay = document.getElementById("statusOverlay")!;
  const statusMsg = document.getElementById("statusMsg")!;
  const subMsg = document.getElementById("subMsg")!;

  let world = new GameWorld(
    canvas.width,
    canvas.height,
    (score) => { scoreVal.innerText = score.toString(); },
    (state) => {
      if (state === 'playing') {
        statusOverlay.classList.add('hidden');
      } else {
        statusOverlay.classList.remove('hidden');
        statusMsg.innerText = state === 'survivorsWin' ? 'ðŸŒŒ DIOS DEL CAOS' : 'ðŸ’€ ANIQUILADOS';
        statusMsg.style.color = state === 'survivorsWin' ? '#34d399' : '#f87171';
        subMsg.innerText = state === 'survivorsWin' ? 'Has recolectado 100 estrellas bajo la niebla.' : 'El Alfa ha terminado la cacerÃ­a perfecta.';
      }
    }
  );

  function loop() {
    world.update();
    world.draw(ctx);
    requestAnimationFrame(loop);
  }

  resetBtn.addEventListener("click", () => {
    world.init();
  });

  loop();
</script>

<style>
  :root {
    --glass: rgba(255, 255, 255, 0.05);
    --glass-border: rgba(255, 255, 255, 0.1);
    --accent: #3b82f6;
  }

  .game-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    padding: 2.5rem;
    background: radial-gradient(circle at top, #1e293b, #0f172a);
    border-radius: 2rem;
    box-shadow: 0 0 80px rgba(0,0,0,0.5);
    color: white;
    font-family: 'Outfit', 'Inter', sans-serif;
    max-width: 900px;
  }

  .header {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }

  .title-section h1 {
    font-size: 2.5rem;
    font-weight: 900;
    margin: 0;
    letter-spacing: -1px;
    background: linear-gradient(to right, #60a5fa, #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .pro-badge {
    font-size: 0.8rem;
    padding: 0.2rem 0.6rem;
    background: #ef4444;
    -webkit-text-fill-color: white;
    border-radius: 4px;
    vertical-align: middle;
    margin-left: 0.5rem;
  }

  .title-section p {
    color: #64748b;
    margin: 0.5rem 0 0 0;
  }

  .score-card {
    background: var(--glass);
    border: 1px solid var(--glass-border);
    backdrop-filter: blur(10px);
    padding: 1rem 2rem;
    border-radius: 1rem;
    text-align: right;
  }

  .score-card .label {
    font-size: 0.7rem;
    color: #94a3b8;
    letter-spacing: 1px;
    margin-bottom: 0.2rem;
  }

  .score-card .value {
    font-size: 2rem;
    font-weight: 800;
    color: #facc15;
  }

  .score-card .total {
    font-size: 1rem;
    color: #475569;
  }

  .canvas-wrapper {
    position: relative;
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow: 0 0 40px rgba(59, 130, 246, 0.2);
    border: 1px solid var(--glass-border);
  }

  canvas {
    background: #020617;
    display: block;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: rgba(2, 6, 23, 0.8);
    backdrop-filter: blur(8px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 50;
    transition: all 0.5s ease;
  }

  .message-box {
    text-align: center;
    transform: scale(1.1);
  }

  .message-box h1 {
    font-size: 4rem;
    font-weight: 900;
    margin: 0;
  }

  .message-box p {
    color: #94a3b8;
    margin: 1rem 0 2rem 0;
  }

  .hidden {
    opacity: 0;
    pointer-events: none;
    visibility: hidden;
  }

  .ui-footer .legend {
    display: flex;
    gap: 2rem;
    background: var(--glass);
    padding: 1rem 2rem;
    border-radius: 50px;
    border: 1px solid var(--glass-border);
  }

  .legend .item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8rem;
    color: #94a3b8;
  }

  .icon {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .icon.shield { background: #3b82f6; box-shadow: 0 0 10px #3b82f6; }
  .icon.speed { background: #facc15; box-shadow: 0 0 10px #facc15; }
  .icon.boss { background: #fb7185; box-shadow: 0 0 10px #fb7185; }
  .icon.fog { background: rgba(0,0,0,0.5); border: 1px solid #475569; }

  button {
    padding: 1rem 3rem;
    background: #3b82f6;
    color: white;
    border: none;
    border-radius: 1rem;
    font-weight: 800;
    font-size: 1.1rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.3);
  }

  button:hover {
    background: #2563eb;
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.4);
  }

  button:active {
    transform: translateY(0);
  }
</style>
